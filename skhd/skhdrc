# -- Changing Window Focus --

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt - i: yabai -m display --focus west
alt - o: yabai -m display --focus east

# maximize a window
alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
alt - e : yabai -m space --balance

# increase window size
shift + ctrl + alt - h : yabai -m window west --resize right:-100:0 2> /dev/null || yabai -m window --resize right:-100:0
shift + ctrl + alt - j : yabai -m window north --resize bottom:0:100 2> /dev/null || yabai -m window --resize bottom:0:100
shift + ctrl + alt - k : yabai -m window south --resize top:0:-100 2> /dev/null || yabai -m window --resize top:0:-100
shift + ctrl + alt - l : yabai -m window east --resize left:100:0 2> /dev/null || yabai -m window --resize left:100:0

# increase window size
shift + ctrl + alt - y : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
shift + ctrl + alt - u : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
shift + ctrl + alt - i : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
shift + ctrl + alt - o : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0

# -- Moving Windows Around --

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt - i : yabai -m window --display west; yabai -m display --focus west;
shift + alt - o : yabai -m window --display east; yabai -m display --focus east;

# toggle space
alt - a : yabai -m space --layout bsp
alt - s : yabai -m space --layout stack
alt - d : yabai -m space --layout float

# set padding
shift + alt - a : yabai -m config top_padding 0; yabai -m config bottom_padding 0; yabai -m config left_padding 0; yabai -m config right_padding 0; yabai -m config window_gap 0;
shift + alt - s : yabai -m config top_padding 5; yabai -m config bottom_padding 5; yabai -m config left_padding 5; yabai -m config right_padding 5; yabai -m config window_gap 5;
shift + alt - d : yabai -m config top_padding 10; yabai -m config bottom_padding 10; yabai -m config left_padding 10; yabai -m config right_padding 10; yabai -m config window_gap 10;

